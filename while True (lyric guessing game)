counter = 1
while True:
  lyric = input("Never going to ____ you up ")
  if lyric == "Give" or lyric == "give":
    print("you go it!")
  else:
    print("Nope, try again")
    counter += 1
  if lyric == "give":
    break
print("Thanks for playing!")

print("You got the correct answer in", counter, "attempts")
